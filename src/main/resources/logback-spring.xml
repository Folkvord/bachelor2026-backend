
<!-- 
    Formatet til en loggoppføring ser slik ut:
    DATO TID [TRÅD SOM UTFØRER] [LEVEL] KLASSE - [TRACEID] [USERID] METODE URI: *melding*
 -->

<configuration>

    <!-- Filstien og filnavnet til logfilen (ubrukt atm) -->
    <property name="LOG_ROOT" value="logs/"/>
    <property name="LOG_NAME" value="log"/>


    <!-- Innstillinger for logging til terminalen -->
    <appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>
                %blue(%d{yyyy-MM-dd HH:mm:ss.SSS}) [%thread] %highlight(%-5level) %cyan(%logger{36}) - [%X{traceID}] %replace(%X{userID:-}){'^(.+)$', '[userID: $1]'} %green(%X{method}) %green(%X{endpoint}) %msg%n%ex
            </pattern>
        </encoder>
    </appender>


    <!-- Innstillinger for logging til logfilen -->
    <appender name="FILE" class="ch.qos.logback.core.rolling.RollingFileAppender">

        <rollingPolicy class="ch.qos.logback.core.rolling.SizeAndTimeBasedRollingPolicy">
            <fileNamePattern>${LOG_ROOT}/${LOG_NAME}-%d{yyyy-MM-dd}.%i.log</fileNamePattern>
            <maxFileSize>10MB</maxFileSize>
            <maxHistory>30</maxHistory>
            <totalSpaceCap>50GB</totalSpaceCap>
        </rollingPolicy>

        <encoder>
            <pattern>
                %d{yyyy-MM-dd HH:mm:ss.SSS} [%thread] %-5level %logger{36} - [%X{traceID}] %replace(%X{userID:-}){'^(.+)$', '[userID: $1]'} %X{method} %X{endpoint} %msg%n%ex
            </pattern>
        </encoder>

    </appender>


    <!-- Innstillinger for hva som skal logges -->
    <root level="INFO">
        <appender-ref ref="STDOUT"/>
        <appender-ref ref="FILE"/>
    </root>

</configuration>